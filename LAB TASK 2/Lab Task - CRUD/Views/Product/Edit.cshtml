@model Lab_Task___CRUD.Models.Entity.Product
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<form action="/Product/Edit" method="post">
    ID: <input type="text" name="Name" value="@Model.Id" class="form-control" disabled>
    Name: <input type="text" name="Name" value="@Model.Name" class="form-control">
    Price: <input type="text" name="Price" value="@Model.Price" class="form-control">
    Quantity:<input type="text" name="Quantity" value="@Model.Quantity" class="form-control">
    Description:<input type="text" name="Description" value="@Model.Description" class="form-control">
    <br />
    <input type="submit" value="Edit" class="btn btn-primary">
</form>


